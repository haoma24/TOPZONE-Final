@model IEnumerable<TOPZONE.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="container bg-light">
    <h2>Quản lý sản phẩm</h2>

    <p>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-outline-primary" })
    </p>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaBan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuongTon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiSP.TenLoaiSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhaCungCap.TenNCC)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongTon)
                </td>
                <td>
                    <img width="100" src="@Html.DisplayFor(model => item.Hinh)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiSP.TenLoaiSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhaCungCap.TenNCC)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "SanPhams", new { id = item.MaSP.TrimEnd() })">Sửa</a> |
                    <a href="@Url.Action("Details", "SanPhams", new { id = item.MaSP.TrimEnd() })">Chi tiết</a> |
                    <a href="@Url.Action("Delete", "SanPhams", new { id = item.MaSP.TrimEnd() })">Xóa</a>
                </td>
            </tr>
        }
    </table>
</div>

