@model IEnumerable<TOPZONE.PhieuNhap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Quản lý nhập hàng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NgayNhap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TriGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhanVien.TenNV)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NgayNhap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TriGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhanVien.TenNV)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaPN.TrimEnd() }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaPN.TrimEnd() }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaPN.TrimEnd() })
        </td>
    </tr>
}

</table>
