@model IEnumerable<TOPZONE.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Quản lý tài khoản</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaTK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenDN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatKhau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiTK)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaTK)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenDN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatKhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiTK)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaTK.TrimEnd() }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaTK.TrimEnd() }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaTK.TrimEnd() })
        </td>
    </tr>
}

</table>
